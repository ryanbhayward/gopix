%!PS-Adobe-3.0
%%BoundingBox: 0 0 80 60
%%Pages: 0
%%EndComments
/OriginX 0 def
/OriginY 0 def
/Rows 4 def
/Cols 5 def
1 setlinejoin   % use round join when lines meet at a point
/LineWidth      5 def 
/PerimeterWidth 0.2 def 
/CellDiameter  20   def 
/BoardShade .9 def
/TextHeight 8 def
/TextWidth TextHeight 0.45 mul def

/ScalePair { % stack: ... x y size ==> ...  x*size y*size
   3 dict begin /size exch def /y exch def /x exch def
   x size mul           y size mul
end } def

/FillAndStroke { 2 dict begin /sh exch def /wdth exch def
    gsave sh setgray fill
    grestore 0 setgray wdth setlinewidth stroke
end } def

/Point { CellDiameter ScalePair } def

/DrawBoard { 2 dict begin
    gsave
    newpath .5 .5 Point moveto
    0    Rows     Point rlineto
    Cols 0        Point rlineto
    0    Rows neg Point rlineto
    closepath PerimeterWidth BoardShade FillAndStroke
    grestore
end } def

/LabelString {   % call: i j (str) strlen LabelString
    6 dict begin /strlen exch def /str exch def /j exch def /i exch def
    newpath
    i j Point /y exch def /x exch def
    x y moveto
    TextWidth strlen mul 0.5 mul neg TextHeight 0.33 mul neg rmoveto
    str show
end } def

/LabelStringVerb { % i j (str) strlen shade bold italic LabelStringVerb
    7 dict begin /italic exch def /bold exch def /shade exch def
    /strlen exch def /str exch def /j exch def /i exch def
    bold italic FontSelect shade setgray
    i j str strlen LabelString
end } def

/PutLabel { % i j (str) strlen clr
    5 dict begin /clr exch def /strlen exch def /str exch def /j exch def /i exch def
    i j str strlen 1.0 clr sub true true LabelStringVerb
end } def

/FontSelect { % bold italic FontSelect
    2 dict begin /italic exch def /bold exch def
    bold {
        italic
        { /Times-BoldItalic findfont TextHeight scalefont setfont }
        { /Times-Bold findfont TextHeight scalefont setfont }
        ifelse}
        {
        italic {/Times-Italic findfont TextHeight scalefont setfont}
        { /Times findfont TextHeight scalefont setfont }
        ifelse}
    ifelse
end } def

/H { % horizontal line, start at a b, go c units
  3 dict begin /c exch def /b exch def /a exch def
  a b Point moveto c 0 Point rlineto closepath stroke
end } def

/V { % vertical line, start at a b, go c units
  3 dict begin /c exch def /b exch def /a exch def
  a b Point moveto 0 c Point rlineto closepath stroke
end } def

-.5 -.5 Point translate 
DrawBoard
LineWidth setlinewidth
1 4 1 H
1 2 1 H
2 4 1 H
2 1 1 H
3 4 1 H
3 3 1 H
3 2 1 H
3 1 1 H
4 4 1 H
1 2 1 V
1 1 1 V
2 3 1 V
2 2 1 V
3 2 1 V
4 1 1 V
5 3 1 V
5 2 1 V
5 1 1 V
showpage
